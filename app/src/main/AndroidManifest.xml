<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mossin.org.invetary_app" >

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <!-- Permisos -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/clipboard"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Agregar"
            android:label="@string/title_activity_agregar" >
        </activity>
        <activity
            android:name=".Buscar"
            android:label="@string/title_activity_buscar"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.app.searchable"
                android:value=".SearchResult" />
        </activity>
        <activity
            android:name=".PictureDemo"
            android:label="@string/title_activity_picture_demo" >
        </activity>
        <activity
            android:name=".Busqueda"
            android:label="@string/title_activity_busqueda" >
        </activity>
        <activity
            android:name=".Resultados"
            android:label="@string/title_activity_resultados" >
        </activity>
        <activity
            android:name=".Personal"
            android:label="@string/title_activity_personal" >
        </activity>
        <activity
            android:name=".Perfil"
            android:label="@string/title_activity_perfil" >
        </activity>
        <activity
            android:name=".Mobiliario"
            android:label="@string/title_activity_mobiliario" >
        </activity>
        <activity
            android:name=".SubSistema"
            android:label="@string/title_activity_sub_sistema" >
        </activity>
        <activity
            android:name=".LeerDatos"
            android:label="@string/title_activity_leer_datos" >
        </activity>
        <activity
            android:name=".Detalles"
            android:label="@string/title_activity_detalles" >
        </activity>
        <activity
            android:name=".Descargas"
            android:label="@string/title_activity_descargas" >
        </activity>
    </application>

</manifest>
