<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mossin.org.invetary_app.Agregar">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="900dp"
        android:orientation="vertical"
        >

        <TextView
            android:textStyle="bold"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Registra Dispositivo"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Colortexto"
        android:textColorHint="@color/txt"
        android:hint="N° de Serie"
        android:id="@+id/editText3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_marginTop="20dp"
        android:textColor="@color/Colortexto"
        android:textColorHint="@color/txt"
        android:hint="$ Precio"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha de Compra:"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true" />

    <EditText
        android:textStyle="bold"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:hint="000-00-00"
        android:textColorHint="@color/txt"
        android:textColor="@color/Colortexto"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/radioGroup" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reemplazado:"
        android:id="@+id/textView4"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:id="@+id/radioButton"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SI"
            android:id="@+id/radioButton2"
            android:checked="false" />
    </RadioGroup>

    <EditText
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:hint="Descripción"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/txt"
        android:textColor="@color/Colortexto"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:hint="Marca"
        android:textColorHint="@color/txt"
        android:textColor="@color/Colortexto"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/radioGroup" />

    <EditText
        android:textStyle="bold"
        android:hint="Modelo"
        android:textColorHint="@color/txt"
        android:textColor="@color/Colortexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Eje Vial:"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText7"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tramo Carretero:"
        android:id="@+id/textView6"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_below="@+id/spinner2"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:hint="Kilometro"
        android:textColorHint="@color/txt"
        android:textColor="@color/Colortexto"
        android:inputType="numberSigned"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView4"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:textStyle="bold"
        android:hint="Metros"
        android:textColorHint="@color/txt"
        android:textColor="@color/Colortexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText10"
        android:layout_alignTop="@+id/editText9"
        android:layout_toEndOf="@+id/editText9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FECHA"
        android:drawableLeft="@drawable/ic_today_grey600_24dp"
        android:id="@+id/button3"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Descripción:"
        android:id="@+id/textView7"

        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Marca"
        android:id="@+id/textView8"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Modelo"
        android:id="@+id/textView9"
        android:layout_below="@+id/editText6"
        android:layout_toEndOf="@+id/radioGroup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Numero de Serie"
        android:id="@+id/textView10"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="$ Precio"
        android:id="@+id/textView11"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText11"
            android:textStyle="bold"
            android:textColor="@color/Colortexto"
            android:hint="Foto_Ruta"
            android:textColorHint="@color/txt"
            android:layout_alignTop="@+id/editText10"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editText8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:height="60dp"
            android:background="@drawable/botones"
            android:textColor="@color/blanco"
            android:drawableRight="@drawable/ic_save_white_36dp"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/editText11"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cuerpo:"
            android:id="@+id/textView13"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/checkBox"
            android:layout_above="@+id/editText6"
            android:layout_alignParentStart="true"
            android:checked="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:id="@+id/checkBox2"
            android:layout_alignTop="@+id/checkBox"
            android:layout_toEndOf="@+id/textView8"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/checkBox3"
            android:layout_alignTop="@+id/checkBox2"
            android:layout_toEndOf="@+id/checkBox2"
            android:checked="false" />

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>

<ListView
    android:layout_width="240dp"
    android:layout_height="fill_parent"
    android:id="@+id/lista"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="2dp"
    android:background="#FFFFFF"
    android:textColor="#ECEFF1"
    android:layout_gravity="start"
    />

</android.support.v4.widget.DrawerLayout>